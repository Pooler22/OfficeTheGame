<Page
    x:Class="testUniveralApp.PlayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:testUniveralApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" KeyDown="Grid_KeyDown">
    <Grid Grid.Row="3" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid x:Name="controlPanel">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Content="Back" Click="Button_Click_Back_To_MainPage" HorizontalAlignment="Stretch" Padding="0" VerticalAlignment="Top" Margin="0"/>
            <Button x:Name="conntctButton" Content="Connect" Click="Connect" HorizontalAlignment="Stretch" Padding="0" VerticalAlignment="Top" Margin="0" Grid.Column="1"/>
        </Grid>
        <StackPanel x:Name="playPanel" UseLayoutRounding="True" Margin="0,0,0,1" Grid.RowSpan="2" Grid.Row="1">
            <Button x:Name="enemyButton" Content="enemyButton" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Top" Margin="0,0,1166,0" Width="200" Height="38" />
            <Ellipse x:Name="ball" Fill="#FFF4F4F5" Stroke="Black" Margin="0" Height="10" RenderTransformOrigin="0.5,0.5" Width="10">
                <Ellipse.RenderTransform>
                    <CompositeTransform TranslateX="6"/>
                </Ellipse.RenderTransform>
            </Ellipse>
            <Button x:Name="playerButton" Content="playerButton" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" AllowDrop="True" Margin="0,0,1166,0" Padding="0" Width="200" Height="38"/>
        </StackPanel>
        <StackPanel x:Name="massage" VerticalAlignment="Bottom" Grid.Row="2" Grid.RowSpan="2">
            <TextBlock x:Name="outTextBlock" Text="" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            <TextBox x:Name="inTextBox" KeyDown="inTextBox_KeyDown" IsEnabled="False" TextAlignment="Center" VerticalContentAlignment="Bottom" VerticalAlignment="Bottom"/>
            <Button x:Name="sendButton" Content="Send" Click="Send" IsEnabled="False" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" VerticalContentAlignment="Bottom"/>
        </StackPanel>
        <FlipView HorizontalAlignment="Left" Margin="653,-72,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
